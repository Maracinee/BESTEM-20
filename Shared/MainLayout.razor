@inherits LayoutComponentBase
@inject IBootstrapCss BootstrapCSS
<div class="sidebar">
    <NavMenu />
</div>

<div class="main">
    <div class="top-row px-4">
        <a href="https://docs.microsoft.com/aspnet/" target="_blank">To add link to PyApp</a>
    </div>

    <div class="content px-4">
        @Body
    </div>
</div>
@code { private bool isServerSide = false;
            protected override async Task OnInitializedAsync()
            {
                try
                {
                    await BootstrapCSS.SetBootstrapCss("4.3.1");
                }
                catch (Exception)
                {
                    isServerSide = true;
                }
            }
            protected override async Task OnAfterRenderAsync(bool firstRun)
            {
                if (isServerSide && firstRun)
                {
                    await BootstrapCSS.SetBootstrapCss("4.3.1");
                }
            } }